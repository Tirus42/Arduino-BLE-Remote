{
  "name": "BLE Remote",
  "version": "0.6.2",
  "description": "BLE peripheral implementation for remote control of custom defined values.",
  "keywords": "ble, remote, control, led",
  "repository":
  {
    "type": "git",
    "url": "git@github.com:Tirus42/Arduino-BLE-Remote.git"
  },
  "authors":
  [
    {
      "name": "Tirus",
      "maintainer": true
    }
  ],
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/Tirus42/Arduino-BLE-Remote",
  "dependencies": {
    "h2zero/NimBLE-Arduino": "@^1.4.2",
    "tirus/LedControlAndAnimation": "^1.4.7",
    "tirus/UUID": "^1.0.1"
  },
  "build": {
	"flags": [
		"-std=c++2a",
		"-Werror=switch",
		"-Werror=format",
		"-Werror=return-type",
		"-Werror=init-self",
		"-Werror=return-local-addr"
	]
  },
  "frameworks": "arduino",
  "platforms": ["espressif32"]
}
